# Database
# Preferred for local smoke/dev:
DATABASE_URL=sqlite:///./genesis.db
#
# MySQL fallback if DATABASE_URL is not set:
MYSQL_DEV_USER=dev
MYSQL_DEV_PASSWORD=devpassword
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=genesis

# OAuth/JWT
OAUTH_SECRET_KEY=replace_with_strong_secret
OAUTH_ACCESS_TOKEN_EXPIRE_MINUTES=15
OAUTH_REFRESH_TOKEN_EXPIRE_DAYS=7
OAUTH_ALGORITHM=HS256
OAUTH_ISSUER=genesis
OAUTH_AUDIENCE=genesis-api

# Root admin bootstrap
ROOT_ADMIN_USERNAME=root
ROOT_ADMIN_EMAIL=root@local
ROOT_ADMIN_PASSWORD=ChangeMeNow!123

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:8080
